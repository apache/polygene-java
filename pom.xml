<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.qi4j</groupId>
  <artifactId>qi4j-core</artifactId>
  <name>Qi4j Core (Build POM)</name>
  <version>1.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <description>
    Qi4j Core is the core modules needed for developing Qi4j applications.
    Qi4j is a Composite Oriented Programming runtime for Java.
  </description>

  <!-- This POM is ONLY to initiate the modules to be built. -->
  <modules>
    <module>build-tools</module>
    <module>api</module>
    <module>bootstrap</module>
    <module>runtime</module>
    <module>spi</module>
    <module>testsupport</module>
  </modules>

  <properties>
    <version.cglib>2.2</version.cglib>
    <scmVersion>1.2</scmVersion>
  </properties>

  <inceptionYear>2007</inceptionYear>
  <url>http://www.qi4j.org/</url>

  <scm>
    <url>http://dscm.ops4j.org/git/gitweb.cgi?p=qi4j-core.git;a=summary</url>
    <connection>scm:git:git://dscm.ops4j.org/qi4j-core.git</connection>
    <developerConnection>scm:git:git@dscm.ops4j.org:qi4j-core.git</developerConnection>
  </scm>

  <developers>
    <developer>
      <id>niclas@hedhman.org</id>
      <name>Niclas Hedhman</name>
      <email>niclas@codedragons.com</email>
      <url>http://www.codedragons.com</url>
