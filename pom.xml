    </repository>
    <snapshotRepository>
      <id>ops4j.snapshots.deploy</id>
      <url>scp://repository.ops4j.org/var/http/repository.ops4j.org/mvn-snapshots</url>
    </snapshotRepository>
    <site>
      <id>ops4j.website.deploy</id>
      <url>scp://www.ops4j.org/var/http/www.ops4j.org/projects/qi4j</url>
